<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#F5F5F5"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:showDividers="end"
    >

    <LinearLayout
        android:id="@+id/chat_title"
        android:layout_width="match_parent"
        android:layout_height="44dip"
        android:background="@drawable/shape_top"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/quit_btn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:clickable="true"
            android:src="@drawable/back" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_weight="8"
            android:text="个人资料"
            android:textSize="8pt"
            android:layout_marginRight="40dp"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_gravity="center_vertical"/>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dip"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"
        android:background="#FFFF"
        android:orientation="horizontal"
        android:showDividers="beginning">

        <TextView

            android:layout_width="40dp"
            android:layout_height="20dp"
            android:layout_marginLeft="30px"
            android:layout_marginTop="12dp"
            android:text="头像"
            android:textSize="15sp"/>


        <ImageView
            android:id="@+id/customer_head"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_marginLeft="240dp"
            android:layout_marginTop="7dp"
            android:src="@drawable/customer"
            />
        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/smallmore"
            android:layout_marginTop="13dp"
            android:layout_marginLeft="2dp"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dip"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="1dp"
        android:background="#FFFF"
        android:orientation="horizontal"
        android:showDividers="beginning">

        <TextView

            android:layout_width="40dp"
            android:layout_height="20dp"
            android:layout_marginLeft="30px"
            android:layout_marginTop="12dp"
            android:text="姓名"
            android:textSize="15sp"/>


        <TextView
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="180dp"
            android:text="gejin11131zhao"
            android:textColor="@color/side_bar_pressed"/>
        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/smallmore"
            android:layout_marginTop="13dp"
            android:layout_marginLeft="2dp"
            />


    </LinearLayout>

    <LinearLayout
        android:showDividers="beginning"
        android:background="#FFFF"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="1dp"
        android:layout_height="44dip"
        android:layout_marginHorizontal="10dp">
        <TextView
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="30px"
            android:text="性别"
            android:textSize="15sp"/>
        <TextView
            android:layout_marginTop="7dp"
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:gravity="right"
            android:layout_marginLeft="241dp"
            android:textColor="@color/side_bar_pressed"
            android:text="男"/>
        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/smallmore"
            android:layout_marginTop="13dp"
            android:layout_marginLeft="2dp"
            />





    </LinearLayout>
    <LinearLayout
        android:showDividers="beginning"
        android:background="#FFFF"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="1dp"
        android:layout_height="44dip"
        android:layout_marginHorizontal="10dp">
        <TextView
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="30px"
            android:text="地区"
            android:textSize="15sp"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/max_codelayout"
        android:showDividers="beginning"
        android:background="#FFFF"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:clickable="true"
        android:layout_marginTop="1dp"
        android:layout_height="44dip"
        android:layout_marginHorizontal="10dp">
        <TextView
            android:layout_width="80dp"
            android:layout_height="20dp"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="30px"
            android:text="二维码名片"
            android:textSize="15sp"
            />


        <ImageView
            android:id="@+id/max_card"
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="190dp"
            android:src="@drawable/xycode"
            />
        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/smallmore"
            android:layout_marginTop="13dp"
            android:layout_marginLeft="2dp"
            />

    </LinearLayout>
    <LinearLayout
        android:showDividers="beginning"
        android:background="#FFFF"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="1dp"
        android:layout_height="44dip"
        android:layout_marginHorizontal="10dp">
        <TextView
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="30px"
            android:text="签名"
            android:textSize="15sp"
            />

        <TextView
            android:layout_width="200dp"
            android:layout_height="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="60dp"
            android:gravity="right"
            android:textColor="@color/side_bar_pressed"
            android:text="其实我比较低调，不爱写签名"/>
        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/smallmore"
            android:layout_marginTop="13dp"
            android:layout_marginLeft="2dp"
            />

    </LinearLayout>
    <LinearLayout
        android:background="#FFFF"
        android:showDividers="beginning"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_height="44dip"
        android:layout_marginHorizontal="10dp">
        <TextView

            android:layout_width="40dp"
            android:layout_height="20dp"
            android:layout_marginLeft="30px"
            android:layout_marginTop="12dp"
            android:text="账号"
            android:textSize="15sp"/>

        <TextView
            android:layout_width="200dp"
            android:layout_height="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="190dp"
            android:text="gejin11131zhao"
            android:textColor="@color/side_bar_pressed"/>
    </LinearLayout>
    <LinearLayout
        android:showDividers="beginning"
        android:background="#FFFF"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="1dp"
        android:layout_height="44dip"
        android:layout_marginHorizontal="10dp">
        <TextView
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="30px"
            android:text="会员等级"
            android:textSize="15sp"/>
        <ImageView
            android:id="@+id/member_lvl"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="250dp"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="50dp"
            android:src="@drawable/vip"
            />
    </LinearLayout>

</LinearLayout>
